<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <!-- 開機後重新排程鬧鐘 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 確保鬧鐘觸發時設備保持喚醒 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Android 14+ 需要 USE_EXACT_ALARM 替代 SCHEDULE_EXACT_ALARM -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <!-- 全螢幕 Intent 權限 - 讓 app 在背景時也能顯示全螢幕通知 -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <!-- 震動權限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 解鎖鍵盤鎖 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:name=".LifeManagerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LifeManager">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop" 
            android:label="@string/app_name"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.LifeManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".LockService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <!-- Android 14+ 需要描述 specialUse 的用途 -->
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="screen_lock_for_focus_mode" />
        </service>

        <!-- 任務鬧鐘接收器 -->
        <receiver 
            android:name=".TaskAlarmReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <!-- 開機廣播接收器 - 重新排程所有待執行任務 -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>